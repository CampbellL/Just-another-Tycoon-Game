<XmlLayout xmlns="XmlLayout"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="XmlLayout ../../../UI/XmlLayout/Configuration/XmlLayout.xsd">
    <Defaults>
        <TextMeshPro fontSize="54"></TextMeshPro>
    </Defaults>

    <Panel name="Specs Panel" image="Sprites/Background/Menu" id="specsPanel" class="specsPanel" height="75%" width="90%" showAnimation="Grow"
           hideAnimation="SlideOut_Right">
        <Panel height="10%" rectAlignment="UpperCenter">
            <Text class="heading-1" offsetXY="0 -35" color="rgba(255,255,255,100)">Specs</Text>
        </Panel>
        <Panel>
            <VerticalScrollView height="60%" width="90%" childScaleHeight="false" childControlHeight="true" noScrollbars="true">
                <VerticalLayout>
                    <HorizontalLayout color="yellow">
                        <TextMeshPro>Skill 1</TextMeshPro>
                        <Button>Unlock</Button>
                    </HorizontalLayout>
                    <HorizontalLayout color="green">
                        <TextMeshPro>Skill 2</TextMeshPro>
                        <Button>Unlock</Button>
                    </HorizontalLayout>
                    <HorizontalLayout color="blue">
                        <TextMeshPro>Skill 3</TextMeshPro>
                        <Button>Unlock</Button>
                    </HorizontalLayout>
                    <HorizontalLayout color="brown">
                        <TextMeshPro>Skill 4</TextMeshPro>
                        <Button>Unlock</Button>
                    </HorizontalLayout>
                    <HorizontalLayout color="black">
                        <TextMeshPro>Skill 5</TextMeshPro>
                        <Button>Unlock</Button>
                    </HorizontalLayout>
                </VerticalLayout>
            </VerticalScrollView>
        </Panel>
    </Panel>

</XmlLayout>