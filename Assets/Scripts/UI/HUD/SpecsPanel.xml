<XmlLayout xmlns="XmlLayout"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="XmlLayout ../../../UI/XmlLayout/Configuration/XmlLayout.xsd">
    <Defaults>
        <Text fontSize="24"></Text>
        <Button fontSize="24"></Button>
    </Defaults>

    <Panel name="Specs Panel" image="Sprites/Background/Menu" id="specsPanel" class="specsPanel" height="75%" width="90%" showAnimation="Grow"
           hideAnimation="SlideOut_Right">
        <Panel height="10%" rectAlignment="UpperCenter">
            <Text class="heading-1" offsetXY="0 -35" color="rgba(255,255,255,100)">Specs</Text>
        </Panel>
        <Panel>
            <VerticalScrollView height="60%" width="90%" childScaleHeight="false" childControlHeight="true" noScrollbars="true">
                <VerticalLayout>
                    <HorizontalLayout color="#17f461">
                        <Text>Coffee Machines
                            (Income +5%)</Text>
                        <Button id="UpgradeMoneyPercentage" onClick="UpgradeMoneyPercentageSkillLevel">500</Button>
                    </HorizontalLayout>
                    <HorizontalLayout color="green">
                        <Text>Skill 2</Text>
                        <Button>Unlock</Button>
                    </HorizontalLayout>
                </VerticalLayout>
            </VerticalScrollView>
        </Panel>
    </Panel>

</XmlLayout>