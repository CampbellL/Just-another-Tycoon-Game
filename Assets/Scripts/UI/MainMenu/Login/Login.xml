<XmlLayout xmlns="XmlLayout"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="XmlLayout Vendor/UI/XmlLayout/Configuration/XmlLayout.xsd">
    <Defaults>
        <InputField fontSize="64"/>
        <Button fontSize="75"/>
        <Panel class="Fields" rectAlignment="MiddleCenter"/>
        <Panel class="Buttons" rectAlignment="LowerCenter" />
    </Defaults>
    <Panel class="Fields" height="20%" width="75%">
        <VerticalLayout spacing="20">
            <InputField id="username" placeholderText="Email Address" contentType="EmailAddress"
                        textAlignment="MiddleCenter" onClick="OpenKeyboard">
            </InputField>
            <InputField placeholderText="password" id="password" textAlignment="MiddleCenter" contentType="Password">
            </InputField>
        </VerticalLayout>
    </Panel>
    <Panel class="Buttons" height="10%" width="100%" rectAlignment="LowerCenter">
        <HorizontalLayout >
            <Button color="#93BFBA" textColor="white" onClick="Login">Login</Button>
            <Button color="#6FA5A0" textColor="white">Register</Button>
        </HorizontalLayout>
    </Panel>
</XmlLayout>